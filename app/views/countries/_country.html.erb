<%= form_for(@country) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :country_code %><br />
    <%= f.text_field :country_code, :size => "10" %> 
      <small> * must be the standard 
        <%= link_to "ISO 3166-1 alpha-3 country code", "http://en.wikipedia.org/wiki/ISO_3166-1_alpha-3", 
          :target => '_blank' %>
      </small>
  </div>
  <div class="field">
    <%= f.label :currency_code %><br />
    <%= select(:country, :currency_code, 
                options_for_select(Country.currency_list, @country.currency_code ), 
                :prompt => true) %>
      <small> * list generated by the 
        <%= link_to "'Money' gem", "https://github.com/RubyMoney/money/", 
        :target => '_blank' %>
      </small>
  </div>
  <div class="field">
    <%= f.label :phone_code %><br />
    <%= f.text_field :phone_code, :size => "10" %> 
       <small> * the 
         <%= link_to "international dialling code", "http://en.wikipedia.org/wiki/List_of_country_calling_              codes", 
         :target => '_blank' %>, beginning with + (e.g +1-254)</small>
  </div>
  <div class="field">
    <%= f.label :region_id %><br />
    <%= collection_select(:country, :region_id, @regions, :id, :region, :prompt => true) %>
  </div>
  <% unless @title == @country.name %>
    <div class="actions">
      <%= submit_tag @tag_name, :class => "action_round" %>
    </div>
    <div class="redirects">
      <%= link_to "(drop changes)", country_path unless @title == "New country"%>
    </div>
  <% end %> 
<% end %>
