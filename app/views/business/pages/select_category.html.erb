<h1>Select a category</h1>
<h4 class="loud">in the '<%= @group %>' group</h4>

<%= form_tag(:category_selected, :method => :get) do %>

  Select from this list: 
      <%= select_tag(:category, options_from_collection_for_select(@categories, :id, :category)) %>
      <br />
  <div class="actions">
    <%= submit_button(@tag_name) %>
  </div>
   <div class="redirects">
    <%= back_to_input %>
  </div>
<% end %>
