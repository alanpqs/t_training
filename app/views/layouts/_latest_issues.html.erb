<br /><br />
<% @latest_issues.each do |i| %>
  <b><%= i.item.resource.category.category.upcase %></b><br />
  <u>'<%= i.item.resource.name %>'</u>
  <br />
  <%= i.item.resource.medium.medium %> from <%= i.vendor.name %>, <%= i.vendor.where_is %>.<br />
  <%= display_decimals(i.discount, 2) %>% DISCOUNT till <%= default_date(i.expiry_date) %>
  <hr />
<% end %>
