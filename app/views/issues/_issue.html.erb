    <div class="field">
       <span class="loud">* </span>
       <%= f.label :ticket_price %> 
         <small>
            (in <%= @vendor.country.currency_symbol %>)
         </small><br />
       <%= f.text_field :ticket_price, :size => 8 %>
     </div>
     <div class="field">
       <span class="loud">* </span>
       <%= f.label :no_of_tickets %><br />
         <small>(offer expires when all tickets are taken)</small>
       <br /> 
       <%= f.text_field :no_of_tickets, :size => 8 %>
     </div>
     <div class="field">
       <span class="loud">* </span>
       <%= f.label :expiry_date, "Offer expiry date" %><br />
         <small>(if tickets are not taken)</small>
       <br /> 
       <%= f.date_select :expiry_date %>
     </div>
       <%= f.hidden_field :vendor_id %>
       <%= f.hidden_field :event %>
       <%= f.hidden_field :contact_method %>
       <%= f.hidden_field :user_id %>
       <%= f.hidden_field :fee_id %>
