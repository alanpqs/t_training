    <%= @resource.medium.medium %> from<br /> 
    <% if logged_in? %>
      <%= link_to @vendor.name.upcase, member_vendor_path(@vendor) %>
    <% else %>
      <%= link_to @vendor.name.upcase, guest_vendor_path(@vendor) %>
    <% end %>
    <br />
    <%= @vendor.address %>, <%= @vendor.country.name %>
    <br /><br />
    <strong>Focus - Category:</strong><br />
     <%= @resource.category.in_group %> - <%= @resource.category.category %>
    <br /><br />
    <strong>Length:</strong> <%= pluralize(@resource.length, @resource.length_unit.downcase) %>
    <br /><br />
    <% unless @resource.webpage.blank? %>
      <strong>More program information:</strong> <br />
      <%= link_to @resource.webpage, @resource.webpage, :target => "_blank" %>
      <br /><br />
    <% end %>
