<h1>Log in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password%>
  </div>
  <div class="actions">
     <%= submit_tag "Log in", :class => "action_round" %>
  </div>
<% end %>
<div class="redirects">
  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
