  <div class="two_column_left">
    <div class="field">
      <span class="loud">* </span>
      <%= f.label :name, "Resource name" %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <span class="loud">* </span>
      <%= f.label :category_id %> 
        <small> &nbsp;(suggest a new category <%= link_to "here", new_business_category_path %>)</small>
        <br />
      <%= collection_select(:resource, :category_id, @categories, :id, :category, :prompt => true) %>
    </div>
    <div class="field">
      <span class="loud">* </span>
      <%= f.label :medium_id, "Format" %> 
        <small> &nbsp;(suggest a new format <%= link_to "here", new_business_medium_path %>)</small>
        <br />
      <%= collection_select(:resource, :medium_id, @media, :id, :medium, :prompt => true) %>
    </div>
    <div class="field">
      <span class="loud">* </span>
      <%= f.label :length_unit %><br />
      <%= select(:resource, :length_unit, 
                 options_for_select(Resource::LENGTH_TYPES, @resource.length_unit ), 
                 :prompt => true) %>
    </div>
    <div class="field">
      <span class="loud">* </span>
      <%= f.label :length, "Number of units" %><br />
      <%= f.text_field :length, :size => 5 %>
    </div>
  </div>
  <div class="two_column_right">
    <div class="field">
      <%= f.label :description %> <small> (max 255 characters)</small><br />
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :feature_list, "Keywords" %> <small> (separated by commas. <=15 words)</small><br />
      <%= f.text_field :feature_list %>
      <small><%= link_to "Keyword help", keyword_help_path %>&nbsp; &nbsp; 
             <% if cookies[:category_id].blank? %>
               <%= link_to "Popular keywords", select_category_path %>
             <% else %>            
               <%= link_to "Popular keywords", popular_keywords_path %>
             <% end %>
      </small> 
    </div>
    <div class="field">
      <%= f.label :webpage %> <small>(where can we find more info?)</small><br />
      <%= f.text_field :webpage %>
    </div>
    <div class="field">
      <%= f.label :hidden, "Archive this resource?" %> 
        <br />
        <small><%= f.radio_button( :hidden, :true ) %> No longer offered &nbsp; &nbsp;
        <%= f.radio_button( :hidden, :false ) %> On current list</small>
    </div>
  </div>
