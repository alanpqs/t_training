<h1><%= @title %></h1>
<h4><%= @vendor.name %>: <%= @resource.name %></h4>

<%= form_for [@resource, @item] do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  
  <%= render 'item', :f => f %>

  <div class="actions">
    <%= submit_button(@tag_name) %>
  </div>
  <div class="redirects">
    <%= link_to "(drop addition - back to main Resource page)", resource_path(@resource) %>
  </div>
<% end %>
